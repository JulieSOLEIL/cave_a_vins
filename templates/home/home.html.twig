{% extends 'base.html.twig' %}

{% block body %}

	<h1>Bienvenue sur la cave à vins !</h1>
	<br>
	<section>
		<div class="card">
			<div class="card-header">
				Quantité en cave
			</div>
			<div class="card-body">
				<h5 class="card-title">Nombre de bouteille:
					{{ stocks['total'] }}
				</h5>
				<br>
				<a href="{{ path('vin.list') }}" class="btn btn-primary">Voir détails du stock</a>
			</div>
		</div>
	</section>
	<section>
		<div class="card">
			<div class="card-header">
				Quantité de vin selon la robe
			</div>
			<div class="card-body">
				<h5 class="card-title">Nombre de vins rouge:
					{{ stocks['vin rouge'] }}
				</h5>
				<hr>
        <h5 class="card-title">Nombre de vins blanc:
					{{ stocks['vin blanc']  }}
				</h5>
        <hr>
        <h5 class="card-title">Nombre de vins rosé:
					{{ stocks['vin rose'] }}
				</h5>
        <br>
				<a href="{{ path('vin.list') }}" class="btn btn-primary">Voir détails du stock</a>
			</div>
		</div>
	</section>

{% endblock %}
